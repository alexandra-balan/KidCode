@model KidCode.Models.School
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>

    <h4>Scoala</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
           Nume scoala: 
        </dt>
        <dd>
            @ViewBag.School.SchoolName
        </dd>
        <dt>
            Profesori :
        </dt>
        <dd>
            @foreach (var prof in ViewBag.Teachers)
            {<p>@prof.TeacherFirstName @prof.TeacherLastName</p>
              
                <br />
            }
        </dd>



    </dl>
</div>
<p>
   
    @Html.ActionLink("Inapoi la lista", "Index")
</p>

